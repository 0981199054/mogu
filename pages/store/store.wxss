/* pages/store/store.wxss */

/* -------------------搜索框----------------------- */

.title_bg {
  background: #ff5777;
  height: 80rpx;
}

.title {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.title_img {
  width: 60rpx;
  height: 60rpx;
}

.title_input {
  width: 70%;
  padding: 10rpx;
  background-color: #e84477;
  border-radius: 20rpx;
}

.title_input_val {
  color: #fff;
  font-size: 24rpx;
  caret-color: #fff;
}

.title_img_small {
  width: 40rpx;
  height: 40rpx;
}

.placeholder {
  color: #fff;
}

/* -------------------------分页--------------------------- */

.flex {
  display: flex;
}

.page_title {
  justify-content: space-around;
  align-items: center;
}

.item {
  padding: 20rpx;
  border-bottom: 4rpx solid #fff;
}

.active {
  border-bottom: 4rpx solid #ff5777;
}

.store_img_small {
  width: 26rpx;
  height: 26rpx;
}

.store_img {
  width: 180rpx;
  height: 180rpx;
  margin: 30rpx 30rpx 0 30rpx;
}

.bg {
 width: 100%;
}

.store_name {
  margin-top: 40rpx;
}

.store_text {
  font-size: 30rpx;
}

.store_color {
  color: #fff;
}

.store_padding {
  padding: 0 20rpx;
}

.store_show {
  width: 100%;
}
/* -----------------------------------商品部分---------------------------------------- */

.shop {
  display: flex;
  flex-wrap: wrap;
  background: #f6f6f6;
}

.shop_box {
  width: 48%;
  display: block;
  background: #fff;
  overflow: hidden;
  position: relative;
  margin-left: 10rpx;
  margin-top: 10rpx;
}

.shop_flex {
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  padding: 0 10rpx;
}

.shop_img {
  width: 100%;
  border-radius: 10rpx;
}

.shop_text {
  padding: 0 10rpx;
  height: 88rpx;
  font-size: 30rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.shop_img_small {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  bottom: 30rpx;
  right: 10rpx;
}

.shop_renative {
  position: relative;
}
/* ------------------------底框----------------------------- */
.bottom_top{
  padding: 20rpx 0;
}
.bottom{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 50rpx;
  background: #f6f6f6;
}
.bottom_text{
  font-size: 30rpx;
  color: #ff496c;
}
.title_img_small {
  width: 40rpx;
  height: 40rpx;
}
