/* 抛物线动画 */

.good_box {
  width: 600rpx;
  position: fixed;
  z-index: 10;
  left: 156rpx;
  transform-origin: right center;
  opacity: 0;

}

.good_move {
  animation: circle .4s linear;
}

@keyframes circle {
  from {
    transform: rotate(0deg);
    opacity: 1
  }

  to {
    transform: rotate(90deg);
    opacity: .4
  }
}

.good_bos {
  width: 40rpx;
  height: 40rpx;
  position: relative;
  border-radius: 50%;
  background: #ff5777;
}
