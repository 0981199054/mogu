/* pages/shop/shop.wxss */

.bg {
  background: #f6f6f6;
  overflow: hidden;
}

.bg_box {
  background: #fff;
}

.flex {
  display: flex;
  justify-content: start;
  align-items: center;
  margin-top: 30rpx;
  border-top: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
}

.size_img {
  width: 160rpx;
  margin: 20rpx;
}

.shop_box {
  width: 400rpx;
}

.shop_text {
  height: 88rpx;
  font-size: 30rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.style {
  font-size: 24rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 13;
  -webkit-box-orient: vertical;
  color: #999;
}

.promotion {
  font-size: 30rpx;
}

.price {
  font-size: 24rpx;
  text-decoration: line-through;
  color: #999;
  margin-left: 10rpx;
}

.money {
  display: flex;
  justify-content: space-between;
}

.compile {
  margin-left: 20rpx;
  font-size: 26rpx;
  padding: 4rpx 10rpx;
  background: #ff5777;
  border-radius: 8rpx;
  color: #fff;
}

.height {
  height: 120rpx;
}

.footer {
  width: 100%;
  height: 90rpx;
  position: fixed;
  bottom: 0;
  background: #fff;
  border-top: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
  display: flex;
  align-items: center;
}

.all {
  width: 100rpx;
  font-size: 30rpx;
  text-align: center;
}

.clearing {
  color: white;
  background: #ff5777;
  padding: 8rpx 40rpx;
  border-radius: 10rpx;
  margin-left: 300rpx;
}

icon {
  margin-left: 10rpx;
}

.manage {
  width: 100%;
  line-height: 80rpx;
  background: #fff;
  border-bottom: 1rpx solid #ccc;
  position: fixed;
  top: 0;
  padding-left: 630rpx;
}

.height_small {
  height: 80rpx;
}
/* -----------------------------弹出框--------------------------------- */
.serve_bg {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 100;
  color: #fff;
}
.serve_box {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 100;
  background: #fff;
  padding-top: 20rpx;
}
.size_box {
  width: 100%;
}
.size_title {
  display: flex;
  justify-content: start;
}
.pop_size_img {
  width: 200rpx;
  height: 300rpx;
  position: relative;
  top: -140rpx;
  margin-left: 40rpx;
}
.size_colum {
  display: flex;
  flex-direction: column;
  margin-left: 25rpx;
  position: relative;
  height: 150rpx;
}
.size_promotion {
  font-size: 50rpx;
}
.size_stock {
  font-size: 26rpx;
}
.serve_img {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 22rpx;
  right: 25rpx;
}
.close {
  padding: 10rpx;
}
.style_top {
  margin-top: -110rpx;
}

.style {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  margin-top: 10rpx;
}

.style_text {
  font-size: 30rpx;
}
.pop_flex {
  display: flex;
}
.style_box {
  margin-top: 10rpx;
  display: inline-block;
  padding: 8rpx 16rpx;
  border: 1rpx solid #bbb;
  border-radius: 6rpx;
  margin-right: 20rpx;
  margin-bottom: 2rpx;
  font-size: 26rpx;
  cursor: pointer;
  color: #5e5e5e;
  text-align: center;
}
.style_chose {
  color: #ed4566;
  border-color: #ed4566;
}
.num_box {
  margin-top: 10rpx;
}
.num_btn_left {
  margin: 0;
  padding: 0 20rpx;
  border: 1rpx solid #bbb;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
  color: #5e5e5e;
  font-size: 30rpx;
  line-height: 62rpx;
}
.num_text {
  width: 80rpx;
  text-align: center;
  line-height: 62rpx;
  border-top: 1rpx solid #bbb;
  border-bottom: 1rpx solid #bbb;
  color: #5e5e5e;
  font-size: 30rpx;
}
.num_btn_right {
  margin: 0;
  padding: 0 20rpx;
  border: 1rpx solid #bbb;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  color: #5e5e5e;
  font-size: 30rpx;
  line-height: 62rpx;
}

.num_chouse {
  color: #ed4566;
}
.shop_char {
  width: 50%;
  background: #ffe6e8;
  color: #ff5777;
  text-align: center;
  line-height: 100rpx;
}
.shop_buy {
  width: 50%;
  background: linear-gradient(90deg, #ff5777, #ff468f);
  color: #fff;
  text-align: center;
  line-height: 100rpx;
}
.money_color{
  color: #ff5777
}
/* -------------------------------------登录按钮-------------------- */
.nolog_btn{
  margin-top: 48%
}
.btn {
  width: 80%;
  color: #fff;
  background-color: #ff5777;
}