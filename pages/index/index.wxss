/**index.wxss**/

/* -----------------------------轮播图----------------------- */

.swiper {
  width: 100%;
}

.slide-image {
  width: 100%;
  height: 100%;
}

.title {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.title_img {
  width: 60rpx;
  height: 60rpx;
}

.title_bg {
  background: #ff5777;
  height: 80rpx;
}

.title_img_small {
  width: 40rpx;
  height: 40rpx;
}

.title_input {
  width: 70%;
  padding: 10rpx;
  background-color: #e84477;
  border-radius: 20rpx;
}

.title_input_val {
  color: #fff;
  font-size: 24rpx;
  caret-color: #fff;
}

/* -------------------------------头部导航---------------------------- */
.placeholder {
  color: #fff;
}
.imglist {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.imglist_box {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
  margin-top: 20rpx;
}

.imglist_img {
  width: 100rpx;
  height: 100rpx;
}

.imglist_text {
  font-size: 26rpx;
  color: rgb(88, 88, 88);
}

/* --------------------------------今日必拼------------------------- */

.spell {
  color: #666;
}

.spell_title {
  width: 216rpx;
  height: 60rpx;
  margin-left: 10rpx;
  margin-bottom: 20rpx;
  padding-right: 20rpx;
  border-right: 1rpx solid #ccc;
  margin-top: 20rpx;
}

.sell_swiper {
  height: 490rpx;
}

.spell_flex {
  display: flex;
}

.spell_box {
  position: relative;
  height: 410rpx;
  width: 32.5%;
  margin-right: 1.25%;
  padding: 0 2px;
  float: left;
  margin-bottom: 2.5px;
  box-shadow: 2rpx 2rpx 5rpx 0 rgba(211, 211, 211, 0.6);
}

.spell_img {
  width: 230rpx;
  height: 230rpx;
}

.spell_text {
  font-size: 26rpx;
  color: rgb(88, 88, 88);
}

.spell_btn {
  width: 210rpx;
  height: 60rpx;
  font-size: 24rpx;
  background: #ff5777;
  color: #fff;
}

.spell_news {
  font-size: 30rpx;
  color: #ff5777;
}

.spell_old {
  text-decoration: line-through;
}

.spell_img_small {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 10rpx;
  top: 10rpx;
}

.spell_img_text {
  background: linear-gradient(to right, #fe8a42, #ff496c);
  color: #fff;
  font-size: 24rpx;
  padding: 0px 7px;
  position: absolute;
  left: 5rpx;
  top: 200rpx;
  border-top-right-radius: 10rpx;
}

.spell_time {
  width: 60rpx;
  text-align: center;
  background: #000;
  color: #fff;
  border-radius: 10rpx;
}

.left {
  margin-left: 20rpx;
}

.spell_segmentation {
  margin: 0 10rpx;
}

.spell_time_flex {
  display: flex;
  align-items: center;
}

/* ----------------------------两张图------------------------------------- */

.gather {
  width: 100%;
  height: 500rpx;
}

.choiceness {
  width: 100%;
  height: 150rpx;
}

/* ------------------------------------精选商品-------------------------------- */

.handpick {
  height: 100rpx;
  display: flex;
  white-space: nowrap;
  background: #fff;
  position: sticky;
  position: -webkit-sticky;
  position: -moz-sticky;
  position: -ms-sticky;
  top: 0;
  z-index: 2;
}

.handpick_text {
  margin-top: 20rpx;
  margin-left: 10rpx;
  display: inline-block;
  padding: 10rpx 20rpx;
  text-align: center;
  background: #f8f8f8;
  color: #666;
  border-radius: 20rpx;
  font-size: 30rpx;
}

.handpick_view {
  display: inline-block;
}

.handpick_cleck {
  background: #fce7eb;
  color: #ff5777;
}

/* -----------------------------------商品部分---------------------------------------- */

.shop {
  display: flex;
  flex-wrap: wrap;
  background: #f6f6f6;
}

.shop_box {
  width: 48%;
  display: block;
  background: #fff;
  overflow: hidden;
  position: relative;
  margin-left: 10rpx;
  margin-top: 10rpx;
}

.shop_flex {
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  padding: 0 10rpx;
}

.shop_img {
  width: 100%;
  border-radius: 10rpx;
}

.shop_text {
  padding: 0 10rpx;
  height: 88rpx;
  font-size: 30rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.shop_img_small {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  bottom: 30rpx;
  right: 10rpx;
}

.shop_renative {
  position: relative;
}

/* ------------------------底框----------------------------- */
.bottom_top{
  padding: 20rpx 0;
}
.bottom{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 50rpx;
  background: #f6f6f6;
}
.bottom_text{
  font-size: 30rpx;
  color: #ff496c;
}
